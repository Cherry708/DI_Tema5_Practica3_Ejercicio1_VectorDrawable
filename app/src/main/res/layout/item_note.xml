<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#CC3467"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Lorem ipsum dolor sit amet consectetur adipiscing, elit facilisis donec felis bibendum arcu aenean, sem nunc tincidunt aliquam enim. Facilisi viverra porttitor curae eleifend vivamus, tincidunt suspendisse commodo arcu penatibus aliquam, sapien sem conubia interdum."
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>
</FrameLayout>